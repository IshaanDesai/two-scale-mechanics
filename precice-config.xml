<?xml version="1.0"?>

<precice-configuration experimental="true">

    <log>
	<sink type="stream" output="stdout"  filter= "%Severity% > debug" enabled="true" />
    </log>  
    
    <data:vector name="stresses1to3"/>
    <data:vector name="stresses4to6"/>
    <data:vector name="strains1to3"/>
    <data:vector name="strains4to6"/>

    <mesh name="laminate-macro-mesh" dimensions="3">
       <use-data name="stresses1to3"/>
       <use-data name="stresses4to6"/>
       <use-data name="strains1to3"/>
       <use-data name="strains4to6"/>
    </mesh>

    <participant name="Laminate-3D-ply">
      <provide-mesh name="laminate-macro-mesh"/>
      <read-data name="stresses1to3" mesh="laminate-macro-mesh"/>
      <read-data name="stresses4to6" mesh="laminate-macro-mesh"/>
      <write-data name="strains1to3" mesh="laminate-macro-mesh"/>
      <write-data name="strains4to6" mesh="laminate-macro-mesh"/>
    </participant>

    <participant name="Micro-Manager">
      <receive-mesh name="laminate-macro-mesh" from="Laminate-3D-ply" direct-access="true" safety-factor="0.0"/>
      <read-data name="strains1to3" mesh="laminate-macro-mesh"/>
      <read-data name="strains4to6" mesh="laminate-macro-mesh"/>
      <write-data name="stresses1to3" mesh="laminate-macro-mesh"/>
      <write-data name="stresses4to6" mesh="laminate-macro-mesh"/>
    </participant>

    <m2n:sockets acceptor="Micro-Manager" connector="Laminate-3D-ply" network="ib0" exchange-directory="/home/desaii/composite-multiscale/"/>

    <coupling-scheme:parallel-explicit>
       <participants first="Micro-Manager" second="Laminate-3D-ply"/>
       <max-time value="1"/>
       <time-window-size value="1e-5"/>
       <exchange data="stresses1to3" mesh="laminate-macro-mesh" from="Micro-Manager" to="Laminate-3D-ply"/>
       <exchange data="stresses4to6" mesh="laminate-macro-mesh" from="Micro-Manager" to="Laminate-3D-ply"/>
       <exchange data="strains1to3" mesh="laminate-macro-mesh" from="Laminate-3D-ply" to="Micro-Manager" initialize="yes"/>
       <exchange data="strains4to6" mesh="laminate-macro-mesh" from="Laminate-3D-ply" to="Micro-Manager" initialize="yes"/>
    </coupling-scheme:parallel-explicit>

</precice-configuration>
