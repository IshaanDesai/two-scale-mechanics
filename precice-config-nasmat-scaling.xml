<?xml version="1.0"?>

<precice-configuration experimental="true">

    <log>
	<sink type="stream" output="stdout"  filter= "%Severity% > debug" enabled="true" />
    </log>  
    
    <data:vector name="stresses1to3"/>
    <data:vector name="stresses4to6"/>
    <data:vector name="strains1to3"/>
    <data:vector name="strains4to6"/>
    <data:scalar name="RVE_ID"/>
    <data:scalar name="MOD_ID"/>
    <data:scalar name="RUC_SIZE"/>

    <mesh name="dummy-mesh" dimensions="3">
       <use-data name="stresses1to3"/>
       <use-data name="stresses4to6"/>
       <use-data name="strains1to3"/>
       <use-data name="strains4to6"/>
       <use-data name="RVE_ID"/>
       <use-data name="MOD_ID"/>
       <use-data name="RUC_SIZE"/>
    </mesh>

    <participant name="Meso-scale-dummy">
      <provide-mesh name="dummy-mesh"/>
      <read-data name="stresses1to3" mesh="dummy-mesh"/>
      <read-data name="stresses4to6" mesh="dummy-mesh"/>
      <write-data name="strains1to3" mesh="dummy-mesh"/>
      <write-data name="strains4to6" mesh="dummy-mesh"/>
      <write-data name="RVE_ID" mesh="dummy-mesh"/>
      <write-data name="MOD_ID" mesh="dummy-mesh"/>
      <write-data name="RUC_SIZE" mesh="dummy-mesh"/>
    </participant>

    <participant name="Micro-Manager">
      <receive-mesh name="dummy-mesh" from="Meso-scale-dummy" direct-access="true" safety-factor="0.0"/>
      <read-data name="strains1to3" mesh="dummy-mesh"/>
      <read-data name="strains4to6" mesh="dummy-mesh"/>
      <read-data name="RVE_ID" mesh="dummy-mesh"/>
      <read-data name="MOD_ID" mesh="dummy-mesh"/>
      <read-data name="RUC_SIZE" mesh="dummy-mesh"/>
      <write-data name="stresses1to3" mesh="dummy-mesh"/>
      <write-data name="stresses4to6" mesh="dummy-mesh"/>
    </participant>

    <m2n:sockets acceptor="Micro-Manager" connector="Meso-scale-dummy" exchange-directory=".."/>

    <coupling-scheme:serial-explicit>
       <participants first="Meso-scale-dummy" second="Micro-Manager"/>
       <max-time value="1"/>
       <time-window-size method="first-participant" value="-1"/>
       <exchange data="stresses1to3" mesh="dummy-mesh" from="Micro-Manager" to="Meso-scale-dummy"/>
       <exchange data="stresses4to6" mesh="dummy-mesh" from="Micro-Manager" to="Meso-scale-dummy"/>
       <exchange data="strains1to3" mesh="dummy-mesh" from="Meso-scale-dummy" to="Micro-Manager"/>
       <exchange data="strains4to6" mesh="dummy-mesh" from="Meso-scale-dummy" to="Micro-Manager"/>
       <exchange data="RVE_ID" mesh="dummy-mesh" from="Meso-scale-dummy" to="Micro-Manager"/>
       <exchange data="MOD_ID" mesh="dummy-mesh" from="Meso-scale-dummy" to="Micro-Manager"/>
       <exchange data="RUC_SIZE" mesh="dummy-mesh" from="Meso-scale-dummy" to="Micro-Manager"/>
    </coupling-scheme:serial-explicit>

</precice-configuration>
